{
  "name": "vischunk",
  "version": "1.0.0",
  "type": "module",
  "description": "An interactive web-based tool for exploring how different chunking and linearization strategies affect data access patterns in multidimensional arrays. This visualization helps understand the trade-offs between different storage layouts and their impact on read performance.",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "dev": "parcel src/index.html",
    "build": "parcel build src/index.html --public-url ./",
    "build:dev": "parcel build src/index.html",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:unit": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/unit",
    "test:integration": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/integration",
    "test:properties": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/properties",
    "test:regression": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/regression",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:snapshots": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/regression/snapshot-regression.test.js",
    "test:snapshots:update": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/regression/snapshot-regression.test.js --updateSnapshot",
    "benchmark": "node tests/performance/coordinate-benchmarks.js",
    "test:all": "npm run test:coverage && npm run benchmark",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write src/ tests/",
    "format:check": "prettier --check src/ tests/",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jkeifer/vischunk.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jkeifer/vischunk/issues"
  },
  "homepage": "https://jkeifer.github.io/vischunk",
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "benchmark": "^2.1.4",
    "eslint": "^9.35.0",
    "fast-check": "^4.3.0",
    "husky": "^9.1.7",
    "jest": "^30.1.3",
    "jest-canvas-mock": "^2.5.2",
    "lint-staged": "^16.1.6",
    "parcel": "^2.15.4",
    "prettier": "^3.6.2"
  },
  "lint-staged": {
    "*.{js,mjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,html,css}": [
      "prettier --write"
    ]
  }
}
